<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="vm"
            type="com.yeongil.digitalwellbeing.viewModel.viewModel.rule.DescriptionViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/rule_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{vm.ruleName}"
            android:textSize="30sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/edit_btn"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@drawable/ic_edit"
            app:layout_constraintRight_toLeftOf="@id/delete_btn"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/delete_btn"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@drawable/ic_garbage"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/header_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="rule_name, edit_btn, delete_btn" />

        <TextView
            android:id="@+id/text_trigger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="실행조건"
            app:layout_constraintBottom_toTopOf="@id/recycler_trigger"
            app:layout_constraintTop_toBottomOf="@id/header_barrier" />

        <androidx.recyclerview.widget.RecyclerView
            recycler_item_list="@{vm.triggerRecyclerItemList}"
            android:id="@+id/recycler_trigger"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/text_action"
            app:layout_constraintTop_toBottomOf="@id/text_trigger" />

        <TextView
            android:id="@+id/text_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="액션"
            app:layout_constraintBottom_toTopOf="@id/recycler_action"
            app:layout_constraintTop_toBottomOf="@id/recycler_trigger" />

        <androidx.recyclerview.widget.RecyclerView
            recycler_item_list="@{vm.actionRecyclerItemList}"
            android:id="@+id/recycler_action"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/text_release"
            app:layout_constraintTop_toBottomOf="@id/text_action" />

        <TextView
            android:id="@+id/text_release"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="추가 해제 조건"
            app:layout_constraintBottom_toTopOf="@id/recycler_release"
            app:layout_constraintTop_toBottomOf="@id/recycler_action" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_release"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/finish_btn"
            app:layout_constraintTop_toBottomOf="@id/text_release" />

        <Button
            android:id="@+id/finish_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확인"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>