<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="itemVM"
            type="com.yeongil.digitalwellbeing.viewModel.itemViewModel.AppBlockEntryItemViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_round_corner"
        android:onClick="@{() -> itemVM.onClick()}"
        android:padding="10dp">

        <ImageView
            android:id="@+id/app_icon"
            image_drawable="@{itemVM.appBlockEntryItem.icon}"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:paddingHorizontal="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/app_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{itemVM.appBlockEntryItem.label}"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@id/description"
            app:layout_constraintLeft_toRightOf="@id/app_icon"
            app:layout_constraintTop_toTopOf="@id/app_icon"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{itemVM.appBlockEntryItem.description}"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/app_icon"
            app:layout_constraintLeft_toRightOf="@id/app_icon"
            app:layout_constraintTop_toBottomOf="@id/app_label"
            app:layout_constraintVertical_chainStyle="packed" />

        <ImageView
            android:id="@+id/delete_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:onClick="@{() -> itemVM.onClickDelete()}"
            android:src="@drawable/ic_garbage"
            app:layout_constraintBottom_toBottomOf="@id/app_icon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/app_icon" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>