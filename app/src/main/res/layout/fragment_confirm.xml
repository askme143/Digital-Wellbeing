<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="액션 동작/해제 조건 확인"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="30sp"
        />

    <TextView
        android:id="@+id/title_releasing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="추가 해제 조건 설정"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="30sp"
        />

    <ImageView
        android:id="@+id/add_btn"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:src="@drawable/ic_add_btn"
        app:layout_constraintTop_toTopOf="@id/title_releasing"
        app:layout_constraintBottom_toBottomOf="@id/title_releasing"
        app:layout_constraintRight_toRightOf="parent"
        />
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/releasing_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="title_releasing, add_btn"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/releasing_barrier"
        app:layout_constraintBottom_toTopOf="@id/footer_barrier"
        />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/footer_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        app:constraint_referenced_ids="before_btn, next_btn" />

    <Button
        android:id="@+id/before_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="취소 (이전)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/next_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설정 완료"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>