<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="itemVM"
            type="com.yeongil.digitalwellbeing.viewModel.itemViewModel.KeywordItemViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> itemVM.onClick()}"
        android:padding="10dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="4dp">

        <TextView
            android:id="@+id/keyword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{itemVM.keywordItem.keyword}"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/handling_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{itemVM.keywordItem.inclusion ? " - 포함할 때" : " - 포함하지 않을 때"}'
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/keyword"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/handling_checkbox"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:checked="@={itemVM.keywordItem.inclusion}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/delete_btn"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/delete_btn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:onClick="@{() -> itemVM.onClickDelete()}"
            android:src="@drawable/ic_garbage"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>